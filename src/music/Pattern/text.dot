/**
 * Renders a Pattern as text
 * @param {string} end  line ending
 */

{{? context.end === undefined }}
	{{ context.end = '\n'; }}
{{?}}

{{? context.object.matchCount > 0 }}

	{{? context.object.isWildcardMatch ||
			context.object.matchCount > 1
	}}
		{{= context.object.matchCount }}
		 /* single space */
	{{?}}

	{{= context.object.name }}

	{{= context.end }}

{{?}}
