/**
 * HTML for turning course generator
 */

<div id="controls">
  <div>
    <label for="stage">Number of bells:</label>
    <select id="stage" onchange="pricker.onStage()">
      <option selected value="{{= context.Stage.Triples }}">Triples</option>
      <option value="{{= context.Stage.Caters }}">Caters</option>
      <option value="{{= context.Stage.Cinques }}">Cinques</option>
    </select>
  </div>
  <div>
    <form onsubmit="return false">
      <label for="initialRow">Starting row:</label>
      <input type="text" id="initialRow" size="11" maxLength="11" />
      <button onclick="pricker.onSetInitialRow()">Set</button>
      <button onclick="pricker.onResetInitialRow()">Reset</button>
    </form>
  </div>
  <div>
    <form onsubmit="return false">
      <label for="targetRow">Target row:</label>
      <input type="text" id="targetRow" size="11" maxLength="11" />
      <button onclick="pricker.onSetTargetRow()">Set</button>
      <button onclick="pricker.onResetTargetRow()">Reset</button>
    </form>
  </div>
  <div>
    Sixes: <span id="sixes"></span>
  </div>
</div>

<div id="output">
  <div id="numCourses"></div>
  <form onsubmit="return false">
    <button onclick="pricker.onOpenCourse()">Open</button>
  </form>
  <div id="courses" ondblclick="pricker.onOpenCourse()""></div>
  <form onsubmit="return false">
    <button onclick="pricker.onOpenCourse()">Open</button>
  </form>
</div>

<div id="sixends"></div>
