/**
 * CSS for turning course generator
 */

#controls {
    border-color: black;
    border-style: solid;
    border-width: 1px;
    float: left;
    margin-right: 25px;
    padding: 9px;
    width: 360px;
}

#controls div {
    margin-bottom: 20px;
}

#controls div:last-of-type {
    margin-bottom: 0px;
}

#controls form {
    height: 25px;
    margin-bottom: 10px;
}

#output {
    background-color: #EFEFF7;
    float: left;
    padding: 10px;
}

#output > * {
    margin-bottom: 5px;
}

#output > *:last-child {
    margin-bottom: 0px;
}

#courses {
    background-color: white;
    border: rgb(227, 227, 227) 0.8px inset;
    cursor: default;
    min-height: 2em;
    min-width: 250px;
    padding: 1px 0;
}

#courses div {
    font-size: 0.9em;
    margin: 0;
    padding: 0 5px 0 3px;
}

#courses div.selected {
    background-color: rgb(0, 120, 215);
    color: white !important;
}
