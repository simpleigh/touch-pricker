/**
 * Renders a touch for consumption by siril-based provers
 * @param {number}  touchRows  rows in the touch
 */

{{
	var courseNames = [ ],
		rounds = context.rounds(context.object.initialRow.length),
		roundsString = context.stringFromRow(rounds);

	context.touchRows = context.touchRows || Infinity;
	context.touchRows -= context.object.start.estimateRows();
}}

/* Header */
// Generated by Free Touch Pricker{{= '\n' }}
// https://github.com/simpleigh/touch-pricker{{= '\n' }}
{{= '\n' }}

/* Output touch as comments */
// {{= context.stringFromRow(context.object.initialRow) }}{{= '\n' }}
{{~ context.object.blocks :course }}
	// {{= course.print('text') }}{{= '\n' }}
{{~}}
{{= '\n' }}

/* Number of bells */
{{= context.object.initialRow.length }} bells{{= '\n' }}
{{= '\n' }}

/* MicroSIRIL will prove the first symbol in the file, so define it */
composition = touch{{= '\n' }}
{{= '\n' }}

/* Short blocks */
{{~ context.object.method.getSixTypes() :sixType }}
	{{ var six = new (context.constructorFromType(sixType))(rounds); }}
	{{= six.type }} = {{= six.getNotationString() }}{{= '\n' }}
{{~}}
plain = +{{= roundsString.slice(-1) }}{{= '\n' }}
bob = +{{= roundsString.slice(-3, -2) }}{{= '\n' }}
single = +{{= roundsString.slice(-3) }}{{= '\n' }}
/* Can't use the name "start": it's processed separately by gsiril */
strt = {{= context.object.start.print('siril') }}{{= '\n' }}
{{= '\n' }}

/* Course definitions */
{{~ context.object.blocks :course:index }}
	course{{= index + 1 }} =
	 /* single space */
	{{= course.print('siril', { touchRows: context.touchRows }) }}
	{{ courseNames.push('course' + (index + 1)); }}

	{{ context.touchRows -= course.estimateRows(); }}
	{{? context.touchRows <= 0 }}
		{{ break; }}
	{{?}}
{{~}}
{{= '\n' }}

/* Touch - all the courses */
touch = strt, {{= courseNames.join(', ') }}{{= '\n' }}
{{= '\n' }}

/* Define the touch to prove for GSiril */
prove touch{{= '\n' }}
